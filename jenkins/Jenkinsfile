pipeline {
    agent any
    
    stage('Checkout Project') {
        steps {
            git branch: 'master',
                url: 'ssh://github.com/sagarkolhe777/sample-maven-app.git'

            sh "ls -lat"
        }
    }
    
    stages {
        stage('Build') {
            steps {
                echo "Build Phase"
            }
        }
        stage('Test') {
            steps {
                echo "Test Phase"
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivery Phase"
            }
        }
    }
}
