pipeline {
    agent any
    
    environment {
        BRANCH_NAME = 'master'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: ${BRANCH_NAME} ]],
                         userRemoteConfigs: [[url: 'https://github.com/sagarkolhe777/sample-maven-app.git']]])
                echo "Checkout Done"
            }
        }     
        stage('Build') {
            steps {
                echo "Build Phase"
            }
        }
        stage('Test') {
            steps {
                echo "Test Phase"
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivery Phase"
            }
        }
    }
}
